CREATE TABLE DOCTOR (
	DOC_ID INT(4) NOT NULL,
    DEPTNAME CHAR(10) CHECK (DEPTNAME IN ('정형외과', '피부과', '이비인후과', '산부인과', '소아과')),
    SEX CHAR(1) CHECK (SEX IN ('F', 'M')),
    PHONENUM CHAR(15),
    TITLE CHAR(5),
    NAME CHAR(10),
    EMAIL CHAR(20),
    FOREIGN KEY(DEPTNAME) REFERENCES DEPTNAME(DEPARTMENT),
    PRIMARY KEY(DOC_ID)
    );
    
