CREATE TABLE NURSE (
	NURSE_ID INT(4) NOT NULL,
    DEPTNAME CHAR(10),
    SEX CHAR(1) CHECK (SEX IN ('F', 'M')),
    PHONENUM CHAR(15),
    TITLE CHAR(5),
    NAME CHAR(10),
    EMAIL CHAR(20),
    TASK CHAR(10),
    FOREIGN KEY(DEPTNAME) REFERENCES DEPTNAME(DEPARTMENT),
    FOREIGN KEY(TASK) REFERENCES NUR_TASK(NURSE_TASK),
    PRIMARY KEY(NURSE_ID)
    );
    
    
