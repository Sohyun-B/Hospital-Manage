/* 과를 입력하면 해당 과 진료 환자 수 반환 */
SELECT  COUNT(P.NAME)
FROM PATIENT P
JOIN TREATMENT T ON P.PATIENT_ID = T.PATIENT_ID
JOIN DOCTOR D ON P.DOC_ID = D.DOC_ID
WHERE D.DEPTNAME = '정형외과'

/* 전체 여성 환자수 반환 */
SELECT COUNT(P.NAME)
FROM PATIENT P
WHERE SEX='F'

/* 전체 남성 환자 수 반환 */
SELECT COUNT(P.NAME)
FROM PATIENT P
WHERE SEX='M'

/* 과별 성별 환자 수 반환 */
SELECT D.DEPNAME, P.SEX, COUNT(P.NAME)
FROM PATIENT P
JOIN TREATMENT T ON P.PATIENT_ID = T.PATIENT_ID
JOIN DOCTOR D ON P.DOC_ID = D.DOC_ID
GROUP BY D.DEPNAME, P.SEX


/* 날짜 별 환자 수 */
SELECT DATE, COUNT(PATIENT_ID)
FROM TREATMENT
GROUP BY (DATE)

/* 질병 별 환자 수 */
SELECT CONTENTS, COUNT(CONTENTS)
FROM TREATMENT
GROUP BY (CONTENTS)
